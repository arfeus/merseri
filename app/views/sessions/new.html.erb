<% provide(:title, "Sign in") %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center login-title">Sign in</h1>
      <div class="account-wall">
			<%= image_tag "dynamite.jpg?sz=120", class: "profile-img", alt: "dynamite.jpg" %> 										
			<%= form_for(:session, url: sessions_path, :html => { class: "form-signin"}) do |f| %>
				 <%= f.text_field :email, placeholder: "Email", class: "form-control", autofocus: true %>
				 <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
				 <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>										
         <label class="checkbox pull-left">
					  <%= f.check_box :remember %>
					  <%= f.label "Remember me" %>
				 </label>
         <%= link_to "Need help?", help_path, class: "pull-right need-help" %>
			   <span class="clearfix"></span>
        <% end %>
        </div>
				<%= link_to "New user sign up here!", signup_path, class: "text-center new-account" %>
      </div>
   </div>
</div>