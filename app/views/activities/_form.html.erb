<br  />
<div class="panel panel-primary panel-form">
		<div class="panel-body panel-primary">
			<%= form_for(@activity, :html => { class: "form-mer"}) do |a| %>
			   
			   <%= a.label :name %><br  />
			   <%= a.text_field :name, class: "form-control" %><br  />
				 <br  />
				 <div><%= a.radio_button :active, true , :checked => true , :value => true %>
					 <%= label :active, "Show on the frontpage" %>				       
				 </div>
			   <br  />
				 <div><%= a.radio_button :active, false, :value => false %>
					 <%= label :active, "Don't show on the frontpage"%>				        
				 </div>
				 <br  />
			   <%= a.submit "Save", class: "btn btn-lg btn-primary btn-block" %>
				 <span class="clearfix"></span>
			<% end %>
	</div>
</div>


