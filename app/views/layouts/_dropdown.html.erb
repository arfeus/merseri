<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span><%= current_user.name  %> <b class="caret"></b></a>
  <ul class="dropdown-menu">
		<li class="<%= 'active' if current_page?(edit_user_path(current_user)) %>"><%= link_to "My settings", edit_user_path(current_user) %></li>
		<li class="divider"></li>
		<% if current_user.admin?%>
      <li class="<%= 'active' if current_page?(users_path) %>"><%= link_to "All users", users_path %></li>
			<li class="divider"></li>
		<% else %>
		  <li class="<%= 'active' if current_page?(users_path) %>"><%= link_to "My info", users_path %></li>
      <li class="divider"></li>
		<% end %>
    <li class="<%= 'active' if current_page?(signout_path) %>"><%= link_to "Sign out", signout_path, method: "delete" %></li>
  </ul>
</li>