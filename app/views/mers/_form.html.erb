<%= form_for @mer do |f| %>

<% if @mer.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@mer.errors.count, "error") %>.
    </div>
    <ul>
    <% @mer.errors.messages.values.each do |msg| %>
	<%msg.each do  |m| %>
	          <li><%= m %></li>
	        <%end %>
    <% end %>
    </ul>
  </div>
<% end %>
 
   <%= f.label :"Idea" %><br  />
   <%= f.text_area :title %>
   <%= f.submit "Save" %>
   
   <%= f.label :"Notes" %><br  />
   <%= f.text_area :text %>
  
  <%= f.label :"Tags" %><br>
  <%= f.text_field :tag_list, value: "draft" %>
   
    <% @mer.vote = 0 %>
  	<%= f.hidden_field :vote %>
  
<% end %>