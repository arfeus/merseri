<%= form_for @mer do |f| %>

  <% if @mer.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@mer.errors.count, "error") %> prohibited
      this post from being saved:</h2>
    <ul>
    <% @mer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
 
  <p>
   <%= f.label :"Note" %><br>
   <%= f.text_field :title %>
