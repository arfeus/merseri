<%= form_for @mer do |f| %>

  <% if @mer.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@mer.errors.count, "error") %> prohibited
      this post from being saved:</h2>
    <ul>
    <% @mer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
 
  <p>
   <%= f.label :"Title" %><br>
   <%= f.text_field :title, size: "45x1" %>
  </p>
   
  <p>
   <%= f.label :"Content" %><br>
   <%= f.text_area :text, size: "41x20" %>
  </p>
  
  <p>
  <%= f.label :"Tags" %><br>
  <%= f.text_field :tag_list, size: "45x1"%>
  </p>
  
  <% @mer.thumbs_up =  0  %>
  <p> 
	  <%= @mer.thumbs_up %>
  <%= f.hidden_field :thumbs_up %>
  </p>
  
  <p>
   <%= f.submit "By clicking the button you accept the terms and conditions" %>
  </p> 
  
<% end %>