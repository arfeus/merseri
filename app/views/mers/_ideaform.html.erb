<%= form_for @mer do |f| %>
  <% if @mer.errors.any? %>
    <div id="error_explanation">
		  <div class="alert alert-error">
			   The form contains <%= pluralize(@mer.errors.count, "error") %>.
	  </div>
		<ul>
	    <% @mer.errors.messages.values.each do |msg| %>
		    <%msg.each do  |m| %>
			    <li><%= m %></li>
				<%end %>
		  <% end %>
	  </ul>
		</div>
  <% end %> 
   <%= f.label :"Idea:" %><br  />
   <%= f.text_area :title, size: "50x3" %><br  />
   <%= f.label :"Notes:" %>
   <br  />
   <%= f.text_area :text, size: "50x6" %><br  />
   <%= f.label :"Tags:" %><br  />
   <%= f.text_field :tag_list, value: "draft", size: "50" %><br  />
	 <br  />
   <%= f.submit "Save", class: "btn btn-lg btn-primary" %>

   <!-- vote must be set 0 in database -->
   <% @mer.vote = 0 %>  
   <%= f.hidden_field :vote %>
<% end %>

