<h1>Notes</h1>

<p>
<%= form_tag(mers_path, :method => "get", id: "search-form") do %>
	<%= text_field_tag :search, params[:search], placeholder: "Search note" %>
	<%= submit_tag "Search", :name => nil %>
<% end %>
</p>
<p>
<div id="tag_cloud">
  <% tag_cloud Mer.tag_counts, %w{s m l} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>
</p>

<div="mers"> 
  <% @mers.each do |mer| %>
  	  <hr />
      <h4><%= link_to mer.title, mer %></h4>
      <%= simple_format(mer.text) %>
	  <p>Tags: <%= raw mer.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
	  <p><%= pluralize(mer.comments.count,'comment') %> | vote = <%= mer.vote %></p>
	  
	  <p>
	  	<%= form_for mer do |f| %>
	  	  <% mer.vote = mer.vote + 1  %>
	  	  <%= f.hidden_field :vote %>
	  	  <%= f.submit "Vote" %>
	  	<% end %>
	  </p>
	  	  
	  <%= link_to 'Add to collection', addCollection_path(:id => mer.id) %>
	  | <%= link_to 'Show', mer_path(mer) %>
	  | <%= link_to 'Edit', edit_mer_path(mer) %>
	  | <%= link_to 'Delete', mer_path(mer),
		  	method: :delete, data: { Confirm: 'Are you sure???' }%>
	  <br />
	  <br />
	  <br />
  <% end %>
</div>
