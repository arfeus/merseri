<% provide(:title, 'Idea') %>
<div class="container">
<h1>Idea:</h1>

	<div class="panel panel-primary">
		<div class="panel-heading"><%= @mer.created_at %></div>
	  <div class="panel-body panel-primary">
	    <div class="well">
				<%= @mer.title %>
			</div>
	    <div class="well">
				<%= @mer.text %>
			</div>
	    <div class="well">
				<%= @mer.tag_list %>
			</div>
	  </div>
	  <div class="panel-footer">
			<%= link_to 'Edit', edit_mer_path(@mer) %>
	    | <%= link_to 'Ideas', mers_path %>
			| This idea has <%= pluralize(@mer.vote, "vote") %>		
		</div>
	</div>
	
  <%= render 'add_comment' %>
	
	<h3>Note <%= @mer.comments.count %> comments. Last one to be removed.</h3>
	<% @mer.comments.each do |comment| %>
	  <div class="panel panel-primary">
		<div class="panel-heading"><%= comment.created_at %></div>
	  <div class="panel-body panel-primary">
	    <div class="well">
				<%= comment.commenter %>
			</div>
	    <div class="well">
				<%= comment.body %>
			</div>
	  </div>
	  <div class="panel-footer">
		  <%= link_to 'Delete this comment', [comment.mer, comment],
		                 method: :delete,
		                 data: { confirm: 'Are you sure?' } %>	
		</div>
		</div>
	<% end %>

  to be removed
	<%= form_for @mer do |f| %>
	  <% @mer.vote = @mer.vote - 1  %>
	  <%= f.hidden_field :vote %>
	  <%= f.submit "Vote down" %>
	<% end %>
</div>

