<div class="row">
	<div class="col-sm-6 col-md-4 col-md-offset-4">
		<div class="search-wall">
			<%= form_tag(mers_path, :method => "get", :html => { class: "form-search"}) do %>
			  <%= text_field_tag :search, params[:search], placeholder: "Search for ideas...", class: "form-control" %>
			  <br  />
				<%= submit_tag "Search", :name => nil, class: "btn btn-lg btn-primary btn-block" %>
				<br  />
			<% end %>
			<div id="tag_cloud">
			  <%= render 'mers/tagcloud' %>
			</div>
		</div>
	</div>
</div>